// Affiliate Automated - TikTok Shop Commission Maximizer
// Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  role          UserRole  @default(CREATOR)
  status        UserStatus @default(PENDING)
  
  // Auth
  emailVerified DateTime?
  password      String?
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  creator       Creator?
  admin         Admin?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  CREATOR
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

// ============================================
// ADMIN MANAGEMENT
// ============================================

model Admin {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Permissions
  canApproveCreators    Boolean @default(true)
  canManageProducts     Boolean @default(true)
  canSendNotifications  Boolean @default(true)
  canViewAnalytics      Boolean @default(true)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============================================
// CREATORS & TIKTOK INTEGRATION
// ============================================

model Creator {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Discord Integration
  discordUserId   String?  @unique
  discordUsername String?
  discordAvatar   String?
  
  // TikTok Shop Integration
  tiktokConnected     Boolean   @default(false)
  tiktokUserId        String?   @unique
  tiktokUsername      String?
  tiktokDisplayName   String?
  tiktokAvatar        String?
  tiktokAccessToken   String?   @db.Text
  tiktokRefreshToken  String?   @db.Text
  tiktokTokenExpiry   DateTime?
  tiktokShopCipher    String?
  
  // Creator Metrics (synced from TikTok)
  followerCount       Int       @default(0)
  totalGmv            Decimal   @default(0) @db.Decimal(12, 2)
  avgEngagementRate   Decimal   @default(0) @db.Decimal(5, 4)
  
  // Platform Data
  niche               String?
  bio                 String?   @db.Text
  notificationsEnabled Boolean  @default(true)
  
  // Relations
  showcaseItems       ShowcaseItem[]
  commissionEvents    CommissionEvent[]
  collaborationInvites CollaborationInvite[]
  productAlerts       ProductAlert[]
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  lastSyncAt          DateTime?
}

// ============================================
// PRODUCTS & COMMISSIONS
// ============================================

model Product {
  id                  String   @id @default(cuid())
  
  // TikTok Product Data
  tiktokProductId     String   @unique
  name                String
  description         String?  @db.Text
  imageUrl            String?
  category            String?
  
  // Pricing
  priceMin            Decimal  @db.Decimal(10, 2)
  priceMax            Decimal  @db.Decimal(10, 2)
  
  // Commission Rates
  aaCommissionRate    Decimal  @db.Decimal(5, 4)  // Affiliate Automated rate
  openCollabRate      Decimal  @db.Decimal(5, 4)  // Standard open collab rate
  bonusRate           Decimal  @db.Decimal(5, 4)  // Calculated: aaRate - openCollab
  
  // Inventory & Status
  stockCount          Int      @default(0)
  freeSampleAvailable Boolean  @default(false)
  status              ProductStatus @default(ACTIVE)
  
  // Seller Info
  sellerId            String?
  sellerName          String?
  
  // Brand relation (for partnered brands)
  brandId             String?
  brand               Brand?   @relation("BrandProducts", fields: [brandId], references: [id])
  
  // Affiliate Link
  affiliateLink       String?  @db.Text
  deepLink            String?  @db.Text
  
  // Relations
  showcaseItems       ShowcaseItem[]
  commissionEvents    CommissionEvent[]
  collaborationInvites CollaborationInvite[]
  productAlerts       ProductAlert[]
  
  // Timestamps
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  lastSyncAt          DateTime?
  
  @@index([category])
  @@index([status])
  @@index([bonusRate])
}

enum ProductStatus {
  ACTIVE
  INACTIVE
  OUT_OF_STOCK
  DISCONTINUED
}

// ============================================
// SHOWCASE TRACKING
// ============================================

model ShowcaseItem {
  id          String   @id @default(cuid())
  creatorId   String
  productId   String
  
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Tracking
  addedAt         DateTime  @default(now())
  verifiedAt      DateTime?
  verificationMethod String?  // 'creator_confirmed', 'performance_detected', 'api_check'
  status          ShowcaseStatus @default(PENDING)
  
  // Performance
  clickCount      Int       @default(0)
  orderCount      Int       @default(0)
  totalRevenue    Decimal   @default(0) @db.Decimal(12, 2)
  totalCommission Decimal   @default(0) @db.Decimal(12, 2)
  
  @@unique([creatorId, productId])
  @@index([creatorId])
  @@index([productId])
}

enum ShowcaseStatus {
  PENDING
  ADDED
  REMOVED
}

// ============================================
// COMMISSION TRACKING (Event Ledger)
// ============================================

model CommissionEvent {
  id              String   @id @default(cuid())
  creatorId       String
  productId       String?
  
  creator         Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  product         Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  
  // Order Data
  tiktokOrderId   String?
  eventType       CommissionEventType
  
  // Financial
  orderAmount     Decimal  @db.Decimal(12, 2)
  commissionRate  Decimal  @db.Decimal(5, 4)
  commissionAmount Decimal @db.Decimal(12, 2)
  
  // Status
  status          CommissionStatus @default(PENDING)
  periodMonth     DateTime
  
  // Raw data for debugging
  rawData         Json?
  
  createdAt       DateTime @default(now())
  processedAt     DateTime?
  
  @@index([creatorId])
  @@index([status])
  @@index([periodMonth])
}

enum CommissionEventType {
  SALE
  REFUND
  ADJUSTMENT
  BONUS
}

enum CommissionStatus {
  PENDING
  CONFIRMED
  PAID
  CANCELLED
}

// ============================================
// COLLABORATION INVITES
// ============================================

model CollaborationInvite {
  id          String   @id @default(cuid())
  creatorId   String
  productId   String
  
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Invite Details
  tiktokInviteId  String?
  status          InviteStatus @default(PENDING)
  
  // Commission Offer
  offeredRate     Decimal  @db.Decimal(5, 4)
  
  // Tracking
  sentAt          DateTime @default(now())
  viewedAt        DateTime?
  respondedAt     DateTime?
  expiresAt       DateTime?
  
  // Response
  responseType    InviteResponse?
  
  @@unique([creatorId, productId])
  @@index([status])
}

enum InviteStatus {
  PENDING
  SENT
  VIEWED
  ACCEPTED
  REJECTED
  EXPIRED
}

enum InviteResponse {
  ACCEPTED
  REJECTED
  EXPIRED
}

// ============================================
// PRODUCT ALERTS
// ============================================

model ProductAlert {
  id          String   @id @default(cuid())
  creatorId   String
  productId   String
  
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  // Alert Details
  alertType   AlertType
  channel     AlertChannel
  
  // Status
  sentAt      DateTime @default(now())
  viewedAt    DateTime?
  clickedAt   DateTime?
  
  // Discord Message ID for tracking
  discordMessageId String?
  
  @@index([creatorId])
  @@index([productId])
}

enum AlertType {
  NEW_PRODUCT
  COMMISSION_BOOST
  LOW_STOCK
  TRENDING
}

enum AlertChannel {
  DISCORD_DM
  DISCORD_CHANNEL
  EMAIL
  PUSH
}

// ============================================
// OAUTH STATE (CSRF Protection)
// ============================================

model OAuthState {
  id            String   @id @default(cuid())
  state         String   @unique
  discordUserId String?
  userId        String?
  redirectUrl   String?
  expiresAt     DateTime
  createdAt     DateTime @default(now())
  
  @@index([state])
}

// ============================================
// SYSTEM SETTINGS
// ============================================

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

// ============================================
// SYNC LOGS
// ============================================

model SyncLog {
  id          String   @id @default(cuid())
  type        String   // 'products', 'orders', 'creators'
  status      String   // 'started', 'completed', 'failed'
  recordsProcessed Int @default(0)
  errors      Json?
  startedAt   DateTime @default(now())
  completedAt DateTime?
}

// ============================================
// BRAND OUTREACH MODULE
// ============================================

model Brand {
  id              String   @id @default(cuid())
  
  // Brand Info
  name            String
  tiktokSellerId  String?  @unique
  tiktokShopName  String?
  category        String?
  
  // Contact Info
  contactName     String?
  contactEmail    String?
  contactPhone    String?
  website         String?
  
  // TikTok Presence
  tiktokHandle    String?
  followerCount   Int      @default(0)
  productCount    Int      @default(0)
  avgRating       Decimal? @db.Decimal(3, 2)
  
  // Current Commission Info
  currentOpenRate Decimal? @db.Decimal(5, 4)
  targetRate      Decimal? @db.Decimal(5, 4)  // What we want to negotiate
  agreedRate      Decimal? @db.Decimal(5, 4)  // What they agreed to
  
  // Pipeline Status
  status          BrandStatus @default(LEAD)
  priority        BrandPriority @default(MEDIUM)
  
  // Notes & History
  notes           String?  @db.Text
  lastContactedAt DateTime?
  nextFollowUpAt  DateTime?
  
  // Relations
  outreachEmails  OutreachEmail[]
  products        Product[]  @relation("BrandProducts")
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([status])
  @@index([priority])
  @@index([category])
}

enum BrandStatus {
  LEAD           // Just identified, not contacted
  CONTACTED      // First outreach sent
  RESPONDED      // They replied
  NEGOTIATING    // Active negotiation
  AGREED         // They agreed to partnership
  PARTNERED      // Fully onboarded, products live
  DECLINED       // They said no
  UNRESPONSIVE   // No response after multiple attempts
}

enum BrandPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model OutreachEmail {
  id          String   @id @default(cuid())
  brandId     String
  brand       Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  
  // Email Details
  templateId  String?
  subject     String
  body        String   @db.Text
  
  // Tracking
  sentAt      DateTime?
  openedAt    DateTime?
  repliedAt   DateTime?
  
  // Status
  status      EmailStatus @default(DRAFT)
  
  // Response
  responseBody String?  @db.Text
  
  createdAt   DateTime @default(now())
  
  @@index([brandId])
  @@index([status])
}

enum EmailStatus {
  DRAFT
  SCHEDULED
  SENT
  OPENED
  REPLIED
  BOUNCED
}

model EmailTemplate {
  id          String   @id @default(cuid())
  
  name        String
  subject     String
  body        String   @db.Text
  
  // Template Variables: {{brand_name}}, {{contact_name}}, {{current_rate}}, {{proposed_rate}}, etc.
  variables   String[] // List of variables used in template
  
  // Categorization
  category    String?  // 'initial_outreach', 'follow_up', 'negotiation', 'onboarding'
  
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
